{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class="h3 mb-3 font-weight-normal">Page d'inscription :</h1>

    {{ form_start(registrationForm) }}
    <form>
        <div class="col-md-9">
            <label class="col-sm-2 col-form-label">Email :</label>
                    {{ form_widget(registrationForm.email) }}
                    {{ form_errors(registrationForm.email) }}
        </div>

        <div class="col-md-9">
            <label class="col-sm-2 col-form-label">Nom :</label>
                    {{ form_widget(registrationForm.nom) }}
                    {{ form_errors(registrationForm.nom) }}
        </div>

        <div class="col-md-9">
            <label class="col-sm-2 col-form-label">Password :</label>
                    {{ form_widget(registrationForm.password) }}
                    {{ form_errors(registrationForm.password) }}
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary" name="inscription">Envoyer</button>
        </div>
    </form>

    {{ form_end(registrationForm) }}
{% endblock %}
