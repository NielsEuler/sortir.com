{% extends 'base.html.twig' %}

{% block title %}
    Creer une nouvelle sortie | {{ parent() }}
{% endblock %}

{% block body %}

    <h1 class="text-center">Cr√©er une sortie</h1>

        {{ form_start(sortie1Form) }}
        <div class="row">

            <div class="col-6">
                <div>{{ form_row(sortie1Form.nom, {'attr': {'class' :'form-control' }}) }}</div>

                <div>{{ form_row(sortie1Form.dateHeureDebut, {'attr': {'class' :'form-control' }}) }}</div><br><br>

                <div>{{ form_row(sortie1Form.dateLimiteInscription, {'attr': {'class' :'form-control' }}) }}</div>

                <div>{{ form_row(sortie1Form.nbInscriptionsMax, {'attr': {'class' :'form-control' }}) }}</div>

                <div>{{ form_row(sortie1Form.duree, {'attr': {'class' :'form-control' }}) }}</div>

                <div>
                    <label for="description">Description et infos</label>
                    <textarea name="description" rows="10" cols="51" class="form-control"></textarea>
                </div>

            </div>

            <div class="col-6">

                <div>
                    <label for="campus">Campus</label>
                    <input type="text" class="form-control">
                </div>
                <div>
                    <label for="ville">Ville</label>
                    <select name="ville" size="1" class="form-control">
                        <optgroup label="Ville">

                        </optgroup>
                    </select><br><br>
                </div>

                <div>
                    <label for="lieu">Lieu</label>
                    <select name="ville" size="1" class="form-control">
                        <optgroup label="lieu">

                        </optgroup>
                    </select>
                </div>

                <div>
                    <label for="rue">Rue</label>
                    <input type="text" class="form-control">
                </div>

                <div>
                    <label for="code postal">Code postal</label>
                    <input type="text" class="form-control">
                </div>

                <div class="mt-5">
                    <label for="latitude">Latitude</label>
                    <input type="text" class="form-control">

                    <label for="longitude">Longitude</label>
                    <input type="text" class="form-control">
                </div>
            </div>
        </div>
        {{ form_widget(sortie1Form) }}
        <div class="text-center">
            <a href="{{ 'main_monProfil' }}" class="btn btn-success mt-2 mb-5 ">Enregistrer</a>
            <a class="btn btn-success mt-2 mb-5 " href="">Publier la sortie</a>
            <a class="btn btn-danger mt-2 mb-5" href="">Annuler</a>
        </div>
    {{ form_end(sortie1Form) }}

{% endblock %}