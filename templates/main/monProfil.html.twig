{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="h3 mb-3 font-weight-normal">Mon profil :</h1>

{#
    {% if app.user %}
#}
{{ form_start(updateProfil) }}

<div class="container">
    <div class="row">
        <div class="col-4 align-self-center">
            PHOTO DE PROFIL
        </div>
        <div class="col align-self-center">
                <div>
                    <br>
                    <h1 class="h3 mb-3 font-weight-normal">Bonjour {# {{ app.user.firstname }} #}</h1>
                </div>

            <div>
                <label>Pseudo :</label>
                {{ form_widget(updateProfil.pseudo) }}
                {{ form_errors(updateProfil.pseudo) }}
            </div>

                <div>
                    <label>Prénom :</label>
                    {{ form_widget(updateProfil.prenom) }}
                    {{ form_errors(updateProfil.prenom) }}
                </div>

                <div>
                    <label>Nom :</label>
                    {{ form_widget(updateProfil.nom) }}
                    {{ form_errors(updateProfil.nom) }}
                </div>

                <div>
                    <label>Téléphone :</label>
                    {{ form_widget(updateProfil.telephone) }}
                    {{ form_errors(updateProfil.telephone) }}
                </div>

                <div>
                    <label>Email :</label>
                    {{ form_widget(updateProfil.email) }}
                    {{ form_errors(updateProfil.email) }}
                </div>

                <div>
                    {{ form_widget(updateProfil.motDePasse) }}
                    {{ form_errors(updateProfil.motDePasse) }}

                </div>


                <div>
                    <label>Campus :</label>
                    {#
                    {{ form_widget(updateProfil.campusRattache) }}
                    {{ form_errors(updateProfil.campusRattache) }}
                    #}
                </div>

                <div>
                    <label>Ma photo :</label>
                    {{ form_widget(updateProfil.photo) }}
                    {{ form_errors(updateProfil.photo) }}
                </div>


                <div class="row">
                    <div class="col">
                <button type="submit" class="btn btn-success" name="maj">Mettre à jour</button>
                    </div>
                <div class="col"></div>
                    <div class="col">
                    <button type="reset" class="btn btn-danger" name="reset">Annuler</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{ form_end(updateProfil) }}
