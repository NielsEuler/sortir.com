{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Home {% endblock %}

{% block body %}
    <br>
        <form method="post">

        <div class="d-flex justify-content-center row g-3 align-items-center">
            <div class="col-auto">
                <label class="col-form-label">Email :</label>
            </div>
            <div class="col-auto">
                <input type="email"
                       name="email"
                       id="inputEmail"
                       class="form-control"
                       autocomplete="email"
                       required autofocus>
            </div>

            <div class="col-auto">
                <label class="col-form-label">Mot de passe :</label>
            </div>

            <div class="col-auto">
                <input type="password"
                       id="inputPassword6"
                       class="form-control"
                       aria-describedby="passwordHelpInline"
                       required>
            </div>
        </div>

        <div class="d-flex justify-content-center row g-3 align-items-center">
            <div class="col-auto">
                <br>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-primary" name="connexion">Se connecter</button>
                <button type="reset" class="btn btn-primary" name="reset">Annuler</button>
            </div>
        </div>



        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>#}
    </form>
{% endblock %}